<IAScreenManager>:
    IALogin:
        name: "login_screen"
    DashboardScreen:
        name: "dashboard_screen"

<IALogin>:
    name: "login_screen"
    Image:
        source: "back.jpg"
        size_hint: None, None
        size: "360dp", "640dp"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    MDLabel:
        id: login_status
        halign: "center"
        font_style: "Body1"
        size_hint_y: None
        height: self.texture_size[1]
        color: 1, 0, 0, 1  # Red color for error messages
        pos_hint: {"center_x": 0.5, "center_y": 0.2}
    MDLabel:
        text: "IAGO EXPRESS"
        font_size: "48dp"
        halign: "center"
        color: "#600170" 
        pos_hint: {'center_y':.8}   
    MDTextField:
        id: usuario_field
        hint_text: "Usuario"
        icon_right: 'account'
        font_size: "20dp"
        size_hint_x: 0.85
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
    MDTextField:
        id: password_field
        hint_text: "Senha"
        icon_right: 'eye-off'
        password: True
        font_size: "20dp"
        size_hint_x: 0.85
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
    BoxLayout:
        size_hint: .85, None    
        height: "30dp"  
        pos_hint: {"center_x": .5, "center_y": .4}
        spacing: "5dp"
        MDCheckbox:
            size_hint: None, None
            width: "30dp"
            height: "30dp"
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_active: password_field.password = not self.active
        MDLabel:
            text: "[ref=Mostrar Senha]Mostrar Senha[/ref]"
            markup: True
            pos_hint: {'center_x': .5, 'center_y': .5}
    BoxLayout:
        size_hint: .6, None    
        height: "30dp"  
        pos_hint: {"center_x": .5, "center_y": .3}
        spacing: "5dp"
        MDFlatButton:
            text: "ENTRAR"
            font_size: "22dp"
            size_hint_x: 1
            md_bg_color: "#600170"
            on_release: root.login()  # Chama a função login() ao pressionar o botão

